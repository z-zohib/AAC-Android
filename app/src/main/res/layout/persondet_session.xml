<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/day"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/nunito"
        android:text="Day"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/session_starttime"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/nunito"
        android:text="140:00am"
        android:layout_toEndOf="@id/day"
        android:layout_toRightOf="@id/day"

        android:textSize="13sp" />

    <TextView
        android:id="@+id/session_endtime"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/session_starttime"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/nunito"
        android:text="155:00pm"
        android:textColor="#AAA3A3"
        android:layout_toEndOf="@id/day"
        android:layout_toRightOf="@id/day"
        android:textSize="11sp" />


    <TextView
        android:id="@+id/session_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/session_starttime"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_toStartOf="@id/session_addbtn"
        android:layout_toLeftOf="@id/session_addbtn"
        android:layout_toEndOf="@+id/session_starttime"
        android:layout_toRightOf="@+id/session_starttime"
        android:fontFamily="@font/nunito"
        android:text="This is the title"
        android:textSize="16sp"
        android:singleLine="true"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/session_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/session_title"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_toStartOf="@+id/session_addbtn"
        android:layout_toLeftOf="@+id/session_addbtn"
        android:layout_toEndOf="@+id/session_starttime"
        android:layout_toRightOf="@+id/session_starttime"
        android:ellipsize="end"
        android:fontFamily="@font/nunito"
        android:singleLine="true"
        android:text="Main St Hall"
        android:textColor="#AAA3A3"
        android:textSize="14sp" />


    <CheckBox
        android:id="@+id/session_addbtn"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="10dp"
        android:layout_alignTop="@id/session_title"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical"
        android:visibility="invisible"/>

</RelativeLayout>